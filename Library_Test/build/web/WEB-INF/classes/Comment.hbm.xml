<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.library.pojo.Comment" table="comment">
         <id name="id" type="integer">
            <column  name="ID" />
            <generator class="identity" />
        </id>
         <property name="readId" type="string">
          <column name="ReadID" />
         </property>
          <property name="bookId" type="string">
          <column name="BookID" />
           </property>
           <property name="readName" type="string">
          <column name="readName" />
             </property>
           <property name="bookName" type="string">
          <column name="BookName" />
             </property>
           <property name="caption" type="string">
          <column name="Caption" />
             </property>
           <property name="content" type="string">
          <column name="Content" />
             </property>
           <property name="commentDate" type="string">
          <column name="CommentDate" />
         </property>
         <property name="portrait" type="string">
          <column name="Portrait" />
         </property>
    </class>
  

</hibernate-mapping>
